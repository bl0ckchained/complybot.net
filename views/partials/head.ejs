<!-- views/partials/head.ejs -->
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof title !== 'undefined' ? title : 'ComplyBot - Affordable ADA Compliance' %></title>
  
  <!-- 🌐 Styles & Favicon -->
  <link rel="stylesheet" href="/style.css" />
  <link rel="icon" href="/favicon.png" type="image/png" />

  <!-- 📈 Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-06FD4Z9W4E"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag("js", new Date());
    gtag("config", "G-06FD4Z9W4E");
  </script>

  <!-- 🌍 Orbiting Globe Styles -->
  <style>
    .orbital-container {
      position: fixed;
      top: 20px;
      right: 20px;
      width: 120px;
      height: 120px;
      z-index: 999;
      pointer-events: none;
    }
    .spinning-globe {
      width: 100%;
      animation: spin 20s linear infinite;
    }
    .orbit-text {
      position: absolute;
      font-size: 0.75rem;
      font-weight: bold;
      color: #28a745;
      text-shadow: 0 0 4px #fff;
      transform-origin: 60px 60px;
      animation: orbit 6s linear infinite;
    }
    .orbit-1 { animation-delay: 0s; top: 0; left: 50%; }
    .orbit-2 { animation-delay: 1.5s; top: 50%; left: 100%; }
    .orbit-3 { animation-delay: 3s; top: 100%; left: 50%; }
    .orbit-4 { animation-delay: 4.5s; top: 50%; left: 0%; }

    @keyframes orbit {
      0% { transform: rotate(0deg) translateX(40px) rotate(0deg); }
      100% { transform: rotate(360deg) translateX(40px) rotate(-360deg); }
    }
    @keyframes spin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }
  </style>
</head>
