<%- include("partials/head", { title: "ComplyBot - Scan Complete" }) %>
<body>
  <%- include("partials/header") %>

  <header>
    <h1>✅ Your Free Scan is Complete</h1>
    <p>We've emailed you a summary of your website's ADA compliance status.</p>
  </header>

  <main>
    <section id="next-steps">
      <h2>Next Steps</h2>
      <p>Want the full detailed report, fixes, and an official compliance certificate?</p>
      <p>Upgrade for just $29 — protect your business today!</p>
      <button id="upgrade-button" class="cta-btn">Upgrade to Full Fix</button>
    </section>
  </main>

  <%- include("partials/footer") %>
  <%- include("partials/scripts") %>

  <script>
    document.getElementById('upgrade-button').addEventListener('click', async () => {
      const email = localStorage.getItem('email');
      const url = localStorage.getItem('url');

      if (!email || !url) {
        alert('Please run a scan first from the home page.');
        window.location = '/';
        return;
      }

      const res = await fetch('/create-checkout-session', { method: 'POST' });
      const data = await res.json();
      window.location = data.url;
    });
  </script>
</body>
</html>
